<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
   >
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/ll_difficulty"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal"
	    android:background="@color/opower_blue">
	    <TextView
	    android:id="@+id/tv_difficultyLevel"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Difficulty Level"
	    android:textColor="#FFF"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:gravity="center" />
       </LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/LinearLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal"
	    android:background="@drawable/custom_border"
	    android:layout_margin="5dp">
	    <ImageView
	        android:id="@+id/iv_redLight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/red_light" 
	        android:layout_weight="0.33"
	        android:background="@color/gray"
	        android:padding="5dp"/>
	
	    <ImageView
	        android:id="@+id/iv_orangeLight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/off_light" 
	        android:layout_weight="0.33"
	         android:background="@color/gray"
	         android:padding="5dp"/>
	
	    <ImageView
	        android:id="@+id/iv_greenLight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/off_light"
	        android:layout_weight="0.33" 
	         android:background="@color/gray"
	         android:padding="5dp"/>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/LinearLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal">

		<TextView
		    android:id="@+id/humanScoreTxt"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.3"
		    android:gravity="center"
		    android:text="0"
		    android:textColor="@color/opower_blue"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
		
		<TextView
		    android:id="@+id/androidScoreTxt"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.3"
		    android:gravity="center"
		    android:text="0"
		    android:textColor="@color/opower_blue"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/LinearLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal">

		<ImageView
		    android:id="@+id/imageView1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.5"
		    android:gravity="center"
		    android:src="@drawable/person" />

		<ImageView
		    android:id="@+id/imageView2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.5"
		    android:gravity="center"
		    android:src="@drawable/android_icon" />
		
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/LinearLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal"
	    android:background="@color/transparent_white">
		<ImageView
		    android:id="@+id/iv_humanChoice"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.5"
		    android:gravity="center"
		    android:src="@drawable/move_placeholder" />

		<ImageView
		    android:id="@+id/iv_androidChoice"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.5"
		    android:gravity="center"
		    android:src="@drawable/move_placeholder" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/transparent_white" />
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/choicesLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal"
	   >
	<FrameLayout
	    android:id="@+id/btn_rock_frame"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	     android:layout_weight="0.33"
	    >
        <ImageButton
            android:id="@+id/btn_rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rock_option"
            
            android:background="@color/transparent_white" />
	</FrameLayout>
	<FrameLayout
	    android:id="@+id/btn_paper_frame"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	     android:layout_weight="0.33"
	    >
        <ImageButton
            android:id="@+id/btn_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paper_option"
            
            android:background="@color/transparent_white" />
        </FrameLayout>
<FrameLayout
	    android:id="@+id/btn_scissors_frame"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	     
	    >
        <ImageButton
            android:id="@+id/btn_scissors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scissors_option"
            android:layout_weight="0.33"
            android:background="#80FFFFFF" />
		</FrameLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/LinearLayout2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp">
		<TextView
	    android:id="@+id/prepText"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Pick your move"
	    android:textStyle="italic"
	    android:textColor="@color/opower_blue"
	    android:background="@color/transparent_white"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:gravity="center"
	    />
        </LinearLayout>
</LinearLayout>